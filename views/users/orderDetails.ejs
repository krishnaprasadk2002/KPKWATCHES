<%- include('../layouts/user/userHeader') %>
<%- include('../layouts/user/userNavBar') %>
<div class="page-wrapper">
   

    

    <main class="main">
        <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url(../user/assets/images/banners/countdown-begins-antique-timer-sand-flowing-endlessly-generated-by-ai.jpg)">
            <div class="container">
                <div class="form-box">
                    <div class="form-tab">

                        <div class="tab-content">


                                  <% orders.forEach(order => { %>
                                    <div class="row align-items-center h-100">
                                
                                        <div class="card card-stepper " style="border-radius: 16px;">
                                          <div class="card-header p-4">
                                            <div class="d-flex justify-content-between align-items-center">
                                              <div>    
                                                <p class="text-muted mb-2" style="font-weight: bold;"> Order ID <span class="fw-bold text-body"><%= order._id %></span></p>
                                                <p class="text-muted mb-0" style="font-weight: bold;"> Place On <span class="fw-bold text-body"> <%= order.date.toLocaleDateString('en-US',
                                                    {
                                                    year:'numeric',
                                                    month: 'short'
                                                    ,
                                                    day: '2-digit'
                                                    }).replace(/\//g, '-'
                                                    )
                                                    %></span> </p>
                                                    <p class="mt-1" style="font-weight: bold;">TOTAL AMOUNT: &nbsp; ₹ <span style="font-size: medium; color: black;" >  <%=order.total%></span></p> <br>
                                                    <p style="font-weight: bold;">Address:</p><br>
                                                    <p ><% if (order.address) { %>
                                                        <%= `Name: ${order.address.name},
                                                         Mobile: ${order.address.mobile},
                                                          Pincode: ${order.address.pincode},
                                                           Address: ${order.address.address},
                                                            City: ${order.address.city},
                                                             State: ${order.address.state}` %>
                                                    <% } else { %>
                                                        N/A
                                                    <% } %></p>
                                                    <p class="mt-4" style="font-weight: bold;">Payment method: <%=order.paymentMode%></p>
                                              </div>
                                            </div>
                                          </div>
                                          <div class="card-body p-4 ">
                                            <% order.Products.forEach(product => { %>
                                              <div class="d-flex flex-row mb-4 pb-2 mt-4 ">
                                                <div class="flex-fill">
                                                  <h5 class="bold"> <a href="/eachproduct/<%=product._id%>"><%= product.name %></a></h5>
                                                  <p class="text-muted" style="font-weight: bold;"> Quantity: <%= product.quentity %> item</p>
                                                  <h4 class="mb-3" style="font-weight: bold;">₹ <%= product.total %> <span class="small text-muted">  </span></h4>
                                                </div>
                                                <div>
                                                 <img class="align-self-center img-fluid "  src="/uploads/<%=product.image%>" width="120"> 
                                                </div>
                                              </div>
                                              <% if(product.orderStatus=="placed"){%>
                                                                    
                                                              <div class="card-footer p-4">
                                                                <div class="d-flex justify-content-between">
                                                                  <h5 class="fw-normal mb-0">
                                                                    <a href="#" class="mb-4" onclick="removefromorder('<%=order._id%>' , '<%=product._id%>','<%= product.orderStatus %>')">Cancel</a>
                                                                  </h5>
                                                                  <div class="border-start h-100"></div>
                                                                </div>
                                                              </div>
                                                              <%}%>
                                                                <%if(product.orderStatus=="shipped"){%>
                                                                <h6 class="text-primary " style="margin-left: 20px; margin-bottom: 30px;" ><%=product.orderStatus%></h6>
                                                                <div class="card-footer p-4">
                                                                    <div class="d-flex justify-content-between">
                                                                      <h5 class="fw-normal mb-0">
                                                                        <a href="#" class="mb-4" onclick="removefromorder('<%=order._id%>' , '<%=product._id%>','<%= product.orderStatus %>')">Cancel</a>
                                                                      </h5>
                                                                      <div class="border-start h-100"></div>
                                                                    </div>
                                                                  </div>
                                                                <%}%>

                                                                <% if (product.orderStatus == "delivered") { %>
                                                                    <h6 class="text-primary" style="margin-left: 20px; margin-bottom: 30px;"><%= product.orderStatus %></h6>
                                                                    <div class="card-footer p-4">
                                                                        <div class="d-flex justify-content-between">
                                                                            <h5 class="fw-normal mb-0">
                                                                                <a href="#" class="mb-4" onclick="returnfromorder('<%= order._id %>', '<%= product._id %>', '<%= product.orderStatus %>')">Return Order</a>
                                                                            </h5>
                                                                            <div class="border-start h-100"></div>
                                                                        </div>
                                                                    </div>
                                                                <% } %>


                                                                
                                                                
                                                                
                                                                
                                                                    <%if(product.orderStatus=="request cancellation"){%>
                                                                    <h6 class="text-danger"><%=product.orderStatus%></h6>
                                                                    <%}%>
                            
                                                                    <%if(product.orderStatus=="cancelled"){%>
                                                                        <h6 class="text-danger"><%=product.orderStatus%></h6>
                                                                        <%}%>
                                                                    <%if(product.orderStatus=="request return"){%>
                                                                        <h6 class="text-danger"><%=product.orderStatus%></h6>
                                                                        <%}%>
                                                                    <%if(product.orderStatus=="returned"){%>
                                                                        <h6 class="text-success"><%=product.orderStatus%></h6>
                                                                        <%}%>
                                            <% }); %>
                                          </div>
                                        </div>

                                    </div>  
                                  <% }); %>
                                  <br>
                                  <a href="/download-invoice/<%= orderid %>" class="btn btn-primary btn-round" >Download Invoice</a>

                        </div><!-- End .tab-content -->
                    </div><!-- End .form-tab -->
                </div><!-- End .form-box -->
            </div><!-- End .container -->
        </div><!-- End .login-page section-bg -->
    </main><!-- End .main -->

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
    
        function removefromorder(orderId, proId) {
            
            Swal.fire({
                title: 'Are you sure?',
                text: 'You are about to cancel request the order. This action cannot be undone!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Cancel request!',
            }).then((result) => {
                if (result.isConfirmed) {
                   
                    fetch(`/cancelOrder/${orderId}/${proId}`, {
                        method: 'POST',
                    })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.json();
                        })
                        .then(data => {
                           
                            console.log('Cancel request submitted successfully:', data);
                            
                         
                            Swal.fire({
                                icon: 'success',
                                title: 'cancel request submitted!',
                                text: 'Your Cancel request has been submitted successfully.',
    
                                
                            }).then(() => {
                                // page reload
                             location.reload();
        
                               
                            });
                        })
                        .catch(error => {
                            
                            console.error('There was a problem cancelling the order:', error.message);
    
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'There was a problem cancelling the order. Please try again.',
                            });
                        });
                }
            });
        }
    </script>


<script>

    function returnfromorder(orderId, proId, orderStatus) {
        Swal.fire({
            title: 'Return Order',
            html: `You are about to request a return for an order with status: <strong>${orderStatus}</strong>.<br>Do you want to proceed?`,
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, request return!',
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/returnOrder/${orderId}/${proId}`, {
                    method: 'POST',
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log('Return request submitted successfully:', data);
                        $('#taborders').load('/profile #taborders')
    
                        Swal.fire({
                            icon: 'success',
                            title: 'Return Request Submitted!',
                            text: 'Your return request has been submitted successfully.',
                        }).then(() => {
                            // page reload or redirect to the return requests page
                            window.location.reload();
                            // or window.location.href = '/return-requests'; // Redirect to a specific page
                        });
                    })
                    .catch(error => {
                        console.error('There was a problem submitting the return request:', error.message);
    
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'There was a problem submitting the return request. Please try again.',
                        });
                    });
            }
        });
    }
    
    </script>