<%- include('../layouts/user/userHeader') %>
<%- include('../layouts/user/userNavBar') %>




        <div class="container  justify-content-center mt-5">
            <div class="table-container" style="padding: 20px;">
                <table class="table table-striped table-bordered" id="walletHistoryTable" style="margin-bottom: 20px;">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Reason</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (user.wallet_history) { %>
                            <% user.wallet_history.forEach((wallet) => { %>
                                <tr>
                                    <td><%= moment(wallet.date).format('YYYY-MM-DD HH:mm:ss') %></td>
                                    <td><%= wallet.amount %></td>
                                    <td><%= wallet.reason %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="3">No wallet history available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <div class="pagination mt-3">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <a href="/wallethistory?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>">
                            <%= i %>
                        </a>
                    <% } %>
                    <span class="pagination-info">
                        Page <%= currentPage %> of <%= totalPages %>
                    </span>
                </div>
                
            </div>
        </div>
        
        


   

      
      <style>
        .pagination {
  display: flex;
  list-style: none;
  padding: 0;
}

.pagination a {
  text-decoration: none;
  color: #000;
  padding: 5px 10px;
  margin: 0 5px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.pagination a.active {
  background-color: #007bff;
  color: #fff;
}

      </style>
        
