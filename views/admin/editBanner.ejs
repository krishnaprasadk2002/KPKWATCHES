            <div class="container mt-5">
                <h2 class="mb-4">Edit Banner</h2>
                <form id="itemForm" action="/admin/editbanner/<%= banner._id %>" method="POST" enctype="multipart/form-data" novalidate>

                    <a href="/admin/editbanner/<%= banner._id %>">Edit</a>
                    <input type="hidden" name="id" value="<%= banner._id %>">


                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" style="background-color: white" placeholder="Title"
                            value="<%= banner.title %>" id="title" name="title" required>
                        <div class="invalid-feedback">
                            Please enter the title.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" style="background-color: white" id="description"
                            placeholder="Description" name="description" required><%= banner.description %></textarea>
                        <div class="invalid-feedback">
                            Please enter the description.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" style="background-color: white" placeholder="Location"
                            value="<%= banner.location %>" id="location" name="location" required>
                        <div class="invalid-feedback">
                            Please enter the Location.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="currentBannerImage" class="form-label">Current Images</label>
                        <div class="row">
                            <div class="col-3 mt-2">
                                <img src="/uploads/<%= banner.image %>" class="img-thumbnail"
                                    style="max-width: 250px; max-height: 250px;">
                            </div>
                        </div>
                    </div>


                    <div class="mb-4">
                        <label class="form-label">Image</label>
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="d-flex align-items-center">
                                <img src="/uploads/<%= banner.image %>" alt="Product Image"
                                    style="width: 30px; height: 30px; margin-right: 10px;">
                                <span>
                                    <%= banner.image %>
                                </span>
                            </div>
                            <a href="#" onclick="confirmDelete('<%= banner._id %>', '<%= banner.image %>')"
                                class="btn btn-danger btn-sm">Delete</a>

                        </div>
                    </div>



                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input  type="file" class="form-control" style="background-color: white" id="image" name="image"
                            accept="image/*">
                        <div class="invalid-feedback">
                            Please select one image only.
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Update Banner</button>
                </form>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



            <script>
                document.getElementById('image').addEventListener('change',()=>{
                    this.files = '';
                })

                document.getElementById('itemForm').addEventListener('submit', function (event) {
                    var titleInput = document.getElementById('title');
                    titleInput.value = titleInput.value.trim();

                    var descriptionInput = document.getElementById('description');
                    descriptionInput.value = descriptionInput.value.trim();

                    var locationInput = document.getElementById('location');
                    locationInput.value = locationInput.value.trim();

                    // Image input validation
                    var imageInput = document.getElementById('image');
                    if (imageInput.files.length > 1) {
                        event.preventDefault();
                        event.stopPropagation();
                        document.querySelector('#image + .invalid-feedback').style.display = 'block';
                    } else {
                        document.querySelector('#image + .invalid-feedback').style.display = 'none';
                    }

                    // Check if the form is valid
                    if (!this.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    } else {
                        Swal.fire({
                            icon: 'success',
                            title: 'Banner updated successfully!',
                            showConfirmButton: false,
                            timer: 2000
                        });

                        setTimeout(() => {
                            window.location.href = '/admin/banner';
                        }, 2000);
                    }

                    this.classList.add('was-validated');
                });
            </script>


            <script>
                function confirmDelete(bannerId, image) {

                    Swal.fire({
                        title: 'Are you sure?',
                        text: 'You will not be able to recover this image!',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Yes, delete it!'
                    }).then((result) => {
                        if (result.isConfirmed) {

                            fetch(`/admin/deleteimage?bannerId=${bannerId}&image=${image}`, {
                                method: 'DELETE'
                            }).then(response => {
                                if (response.ok) {
                                    Swal.fire('Deleted!', 'Your image has been deleted.', 'success').then(()=>{
                                        window.location.reload()
                                    })
                                } else {
                                    console.error('Delete request failed with status:', response.status);
                                    Swal.fire('Error!', 'Failed to delete the image.', 'error');
                                }
                            }).catch(error => {
                                console.error('Error:', error);
                                Swal.fire('Error!', 'Failed to delete the image.', 'error');
                            });

                        }
                    });
                }
            </script>


            <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
