                                    <p id="offern" style="color: red;"></p>
                                </div>
                                <div class="mb-3">
                                    <label for="offerDiscount" class="form-label">Discount Percentage</label>
                                    <input type="number" class="form-control" id="offerDiscount" placeholder="Discount percentage" value="<%= offerData.discount %>" name="discount" min="1" required>
                                    <p id="offerd" style="color: red;"></p>
                                    <p id="offerdp" style="color: red;"></p>
                                </div>
                                <div class="mb-3">
                                    <label for="offerStartingDate" class="form-label">Starting Date</label>
                                    <input type="date" class="form-control" id="offerStartingDate" value="<%= offerData.startingDate %>" name="startingDate" required>
                                    <p id="offersd" style="color: red;"></p>
                                </div>
                                <div class="mb-3">
                                    <label for="offerExpiryDate" class="form-label">Expiry Date</label>
                                    <input type="date" class="form-control" id="offerExpiryDate" value="<%= offerData.expiryDate %>" name="expiryDate" required>
                                    <p id="offered" style="color: red;"></p>
                                </div>
