                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Edit Offer</h6>
                            <form id="offerForm" action="/admin/editoffer" method="POST" novalidate>
                                <input type="hidden" name="id" value="<%= offerData._id %>">
            
                                <div class="mb-3">
                                    <label for="offerName" class="form-label">Name</label>
