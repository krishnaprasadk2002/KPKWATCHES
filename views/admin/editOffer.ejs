<script>

    var startingDate = new Date('<%= offerData.startingDate %>');
    var formattedStartingDate = startingDate.toISOString().slice(0, 10);

    var expiryDate = new Date("<%= offerData.expiryDate %>")
    var formattedexpiryDate = expiryDate.toISOString().slice(0, 10)


    document.getElementById('offerStartingDate').value = formattedStartingDate;
    document.getElementById('offerExpiryDate').value = formattedexpiryDate


</script>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const offerForm = document.getElementById('offerForm')
        offerForm.addEventListener("submit", function (event) {
            event.preventDefault()
           
            const id = document.querySelector('input[name="id"]').value;
            const offerName = document.getElementById("offerName").value
            const offerDiscount = document.getElementById("offerDiscount").value
            const offerStartingDate = document.getElementById("offerStartingDate").value
            const offerExpiryDate = document.getElementById("offerExpiryDate").value

            if (!offerName) {
                const message = document.getElementById("offern").innerHTML = "please enter offer name"
                return
            } else {
                const message = document.getElementById("offern").innerHTML = ""
            }

            if (!(offerDiscount > 0 && offerDiscount < 100)) {
                const message = document.getElementById("offerdp").innerHTML = "please enter offer Discount 1 - 99 number of percentage only"
                return
            }else{
                const message = document.getElementById("offerdp").innerHTML = ""
            }

            if (!offerDiscount) {
                const message = document.getElementById("offerd").innerHTML = "please enter offer Discount percentage"
                return
            } else {
                const message = document.getElementById("offerd").innerHTML = "";
            }


            const startingDate = new Date(offerStartingDate);
            const expiryDate = new Date(offerExpiryDate);

            if (isNaN(startingDate) || isNaN(expiryDate) || startingDate > expiryDate) {
                const message = document.getElementById("offersd").innerHTML = "properly enter starting date below expirydate range";
                return;
            } else {
                const message = document.getElementById("offersd").innerHTML = "";
            }

            fetch("/admin/editoffer", {
                method: "post",
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    id: id,
                    name: offerName,
                    discount: offerDiscount,
                    startingDate: startingDate,
                    expiryDate: expiryDate,
                })
            }).then(response => response.json())
            .then(data => {
                if (data.error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.error,
                    });
                } else {
                    Swal.fire({
                        icon: 'success',
                        title: 'Offer edited successfully!',
                    }).then(() => {
                        window.location.href = '/admin/offer';
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);

                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while updating the offer.',
                });
            })
        });
    });
</script>

