    <div class="container mt-5">
        <h2>Edit Category</h2>
        <form id="editCategoryForm" action="/admin/editcategory" method="POST" novalidate>
            <!-- Bootstrap grid system for responsiveness -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control" style="background-color: white;" id="name" name="name" value="<%= Category.name %>" required>
                        <div class="invalid-feedback">
                            Please enter the category name.
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea class="form-control" id="description" style="background-color: white;" name="description" required><%= Category.description %></textarea>
                        <div class="invalid-feedback">
                            Please enter the category description.
                        </div>
                    </div>
                </div>
            </div>
            <input type="hidden" name="id" value="<%= Category._id %>">
            <!-- Other form fields go here -->
            <button type="submit" class="btn btn-primary">Update Category</button>
        </form>
    </div>
    
    <!-- Bootstrap JS and Popper.js (for Bootstrap functionality) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.getElementById('editCategoryForm').addEventListener('submit', function (event) {
            // Trim input values before validation
            var nameInput = document.getElementById('name');
            nameInput.value = nameInput.value.trim();
    
            var descriptionInput = document.getElementById('description');
            descriptionInput.value = descriptionInput.value.trim();
    
            if (!this.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            this.classList.add('was-validated');
        });
    </script>
    
    

