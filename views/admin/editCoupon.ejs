<!-- Include SweetAlert library -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script>

const expiryDate=new Date("<%= coupon.expiryDate %>")
const formattedexpiryDate=expiryDate.toISOString().slice(0,10)

document.getElementById("expiryDate").value = formattedexpiryDate

    document.addEventListener('DOMContentLoaded', function () {
        const couponForm = document.getElementById('couponForm');

        couponForm.addEventListener('submit', function (event) {
            event.preventDefault();

            // Validate and trim inputs
            const couponIdInput = document.querySelector('input[name="couponId"]');
            const nameInput = document.getElementById('couponName');
            const codeInput = document.getElementById('couponCode');
            const minInput = document.getElementById('minAmount');
            const discountInput = document.getElementById('discountAmount');
            const descriptionInput = document.getElementById('couponDescription');
            const expiryDateInput = document.getElementById('expiryDate');

            const couponId = couponIdInput.value.trim();
            const name = nameInput.value.trim();
            const code = codeInput.value.trim();
            const min = minInput.value.trim();
            const discount = discountInput.value.trim();
            const description = descriptionInput.value.trim();
            const expiryDate = expiryDateInput.value.trim();

            // Check for negative values
            if (min < 0 || discount < 0) {

                Swal.fire({
                    icon: 'error',
                    title: 'Validation Error',
                    text: 'Minimum amount and discount cannot be negative.',
                });
                return;
            }

            if (!name || !code || !min || !discount || !description || !expiryDate) {

                Swal.fire({
                    icon: 'error',
                    title: 'Validation Error',
                    text: 'Please fill in all the fields.',
                });
                return;
            }


            fetch("/admin/editcoupon", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    id: couponId,
                    name: name,
                    code: code,
                    min: min,
                    discount: discount,
                    description: description,
                    expiryDate: expiryDate,
                }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.error) {

                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.error,
                    });
                } else {

                    Swal.fire({
                        icon: 'success',
                        title: 'Coupon edited successfully!',
                    }).then(() => {
                        window.location.href = '/admin/coupon';
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);

                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while updating the coupon.',
                });
            });
        });
    });
</script>
