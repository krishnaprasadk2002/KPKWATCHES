        <%- include('../layouts/admin/adminNav') %>

            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">All Users</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Users</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% userData.forEach((result)=> { %>
                                            <tr>
                                                <td>
                                                    <%= result.name %>
                                                </td>
                                                <td>
                                                    <%= result.email %>
                                                </td>
                                                <td id="status_<%=result._id%>">
                                                    <%=result.status%>
                                                </td>
                                                <td>
                                                    <a href="#" class="btn btn-primary"
                                                        onclick="toggleUser('<%= result._id %>', '<%= result.status %>')">
                                                        <% if(result.status==="Active" ) { %>
                                                            Block
                                                            <% } else { %>
                                                                Activate
                                                                <% } %>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
            
            <%- include('../layouts/admin/footBar') %>
        </div>
        <%- include('../layouts/admin/adminFooter') %>


        
        <script>
            function toggleUser(userId, currentStatus) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: `Do you want to ${currentStatus === 'Active' ? 'Block' : 'Activate'} this user?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = `/admin/alluserlist?id=${userId}`;
                    }
                });
            }
        </script>


