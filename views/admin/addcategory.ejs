            <!-- Bootstrap JS and Popper.js (for Bootstrap functionality) -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            
            <script>
                document.getElementById('categoryForm').addEventListener('submit', function (event) {
                    // Trim input values before validation
                    var categoryNameInput = document.getElementById('categoryName');
                    categoryNameInput.value = categoryNameInput.value.trim();
            
                    var categoryDescriptionInput = document.getElementById('categoryDescription');
                    categoryDescriptionInput.value = categoryDescriptionInput.value.trim();
            
                    if (!this.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    this.classList.add('was-validated');
                });
            </script>
            

