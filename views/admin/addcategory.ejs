                    <h6 class="mb-4">Add Category</h6>
                    <form id="categoryForm" action="/admin/addcategory" method="POST" novalidate>
                        <div class="mb-3">
                            <label for="categoryName" class="form-label">Category Name</label>
                            <input type="text" class="form-control" id="categoryName" placeholder="Category Name" name="name" required>
                            <div class="invalid-feedback">
                                Please enter the category name.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="categoryDescription" class="form-label">Category Description</label>
                            <textarea class="form-control" id="categoryDescription" placeholder="Category Description" name="description" required></textarea>
                            <div class="invalid-feedback">
                                Please enter the category description.
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
